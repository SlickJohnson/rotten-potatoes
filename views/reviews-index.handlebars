<h1>Reviews</h1>

<a href="/movies/{{this.movieId}}/reviews/new">New Review</a>

<div class="row">
  {{#each reviews}}
    <div class="col-sm-3">
      <h2><a href="/movies/{{this.movieId}}/reviews/{{this._id}}">{{this.title}}</a></h2>
      <small>{{this.movieTitle}}</small>
    </div>
  {{/each}}
</div>
